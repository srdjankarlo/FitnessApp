<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".OneExerciseActivity_0_0_0"
    android:id="@+id/id_ac_on_ex_Layout0">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/id_ac_on_ex_ScrollView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/id_ac_on_ex_Layout1">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/id_ac_on_ex_ViewPager1"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:layout_constraintHeight_percent="0.1"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                android:id="@+id/id_ac_on_ex_DotsIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:dotsColor="@color/gray_light"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/id_ac_on_ex_ViewPager1"
                app:selectedDotColor="@color/gray_dark" />

            <TextView
                android:id="@+id/id_ac_on_ex_TextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Here is the explanation of the exercise shown in the picture."
                app:layout_constraintTop_toBottomOf="@+id/id_ac_on_ex_DotsIndicator"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/id_ac_on_ex_Layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/id_ac_on_ex_TextView1">

                <Button
                    android:id="@+id/id_ac_on_ex_Button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Workout timer"
                    android:onClick="DurationTimer"/>

                <TextView
                    android:id="@+id/id_ac_on_ex_TextView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Exercise Duration"
                    android:gravity="center"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/id_ac_on_ex_Layout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/id_ac_on_ex_Layout2">

                <Button
                    android:id="@+id/id_ac_on_ex_Button2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ADD"
                    android:onClick="ADD"/>

                <EditText
                    android:id="@+id/id_ac_on_ex_TextView3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Weight [kg]"
                    android:inputType="numberDecimal"
                    android:gravity="center"/>

                <EditText
                    android:id="@+id/id_ac_on_ex_TextView4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Reps"
                    android:inputType="numberSigned"
                    android:gravity="center"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <LinearLayout
                android:id="@+id/id_ac_on_ex_RecViewHeadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/id_ac_on_ex_Layout3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:layout_weight="2"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Weight"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Reps"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Work [s]"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Rest [s]"
                    android:layout_weight="1"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/id_ac_on_ex_RecView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray_light"
                app:layout_constraintTop_toBottomOf="@+id/id_ac_on_ex_RecViewHeadline"
                app:layout_constraintStart_toStartOf="@+id/id_ac_on_ex_Layout1"
                app:layout_constraintEnd_toEndOf="@+id/id_ac_on_ex_Layout1"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>